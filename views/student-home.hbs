<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Student Dashboard</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
     <div class="btn-group me-2">
      <a href="student/add-student-form" class="btn btn-sm btn-outline-secondary">+ New Student</a>
    </div>
    <form class="d-flex" role="search" action="" method="post">
        <input class="form-control me-2" name="text" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form> 
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">NIC</th>
        <th scope="col">Name</th>
        <th scope="col">Mobile</th>
        <th scope="col" class="text-end">Address</th>
      </tr>
    </thead>
    <tbody>
      {{#each rows}}
        <tr class="align-middle">
          <td>{{this.nic}}</td>
          <td>{{this.name}}</td>
          <td>{{this.mobile}}</td>
          <td>{{this.address}}</td>
          <td class="text-end">
            <div class="d-flex flex-row justify-content-end gap-2">
              <a href="student/view/{{this.nic}}" type="button" class="btn btn-primary btn-small">
                <i class="bi bi-eye"></i>
              </a>
              <a href="student/edit-student-form/{{this.nic}}" type="button" class="btn btn-warning btn-small">
                <i class="bi bi-pencil"></i>
              </a>
                <a href="student/delete/{{this.nic}}" type="button" class="btn btn-danger btn-small">
                <i class="bi bi-person-x"></i>
              </a>
            </div>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>






