<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Edit Student Info.</h1>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/student">Student Management</a></li>
          <li class="breadcrumb-item active">{{this.student.name}} Info.</li>
        </ol>
      </nav>
    </div>
  </div>

</div>


<form action="/student/edit" method="POST">

  <div class="row form-group mb-4">
    <div class="col">
      <label for="nic">NIC</label>
      <input type="text" class="form-control" id="nic" name="nic" placeholder="NIC" required value="{{this.student.nic}}">
    </div>

    <div class="col">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Name" required value="{{this.student.name}}">
    </div>
  </div>

  <div class="row form-group mb-4">

    <div class="col">
      <label for="mobile">Mobile</label>
      <input type="number" class="form-control" id="mobile" name="mobile" placeholder="Mobile" required value="{{this.student.mobile}}">
    </div>

        <div class="col">
      <label for="address">Address</label>
      <input type="text" class="form-control" id="address" name="address" placeholder="Address" required value="{{this.student.address}}">
    </div>
  </div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-warning">Edit Student</button>
  </div>

  

</form>