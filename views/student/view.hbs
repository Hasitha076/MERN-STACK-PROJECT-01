<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Student Info.</h1>
</div>

<div class="col py-3">

  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/student">Student Management</a></li>
          <li class="breadcrumb-item active">{{ student.name }}'s' Info.</li>
        </ol>
      </nav>
    </div>
  </div>

</div>

<ul class="list-group">

    <li class="list-group-item"> 
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>NIC:</b></div>
      <div class="col">{{ student.nic }}</div>
    </div>
  </li>

  <li class="list-group-item"> 
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>Name:</b></div>
      <div class="col">{{ student.name }}</div>
    </div>
  </li>

  <li class="list-group-item"> 
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>Mobile:</b></div>
      <div class="col">{{ student.mobile }}</div>
    </div>
  </li>

  <li class="list-group-item"> 
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>Address:</b></div>
      <div class="col">{{ student.address }}</div>
    </div>
  </li>
</ul>
