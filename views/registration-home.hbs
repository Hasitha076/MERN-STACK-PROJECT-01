<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Registration Dashboard</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <a href="register/register-student-form" class="btn btn-sm btn-outline-secondary">+ Register New Student</a>
    </div>
        <form class="d-flex" role="search" action="" method="post">
        <input class="form-control me-2" name="text" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form> 
  </div>
</div>

