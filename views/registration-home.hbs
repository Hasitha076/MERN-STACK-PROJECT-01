<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Student Name</th>
        <th scope="col">Module Name</th>
        <th scope="col">Register Date</th>
      </tr>
    </thead>
    <tbody>
      {{#each rows}}
        <tr class="align-middle">
          <td>{{this.id}}</td>
          <td>{{this.student_name}}</td>
          <td>{{this.module_name}}</td>
          <td>{{formatDate this.register_date}}</td>
          <td class="text-end">
            <div class="d-flex flex-row justify-content-end gap-2">
              <a href="register/view-register/{{this.id}}" type="button" class="btn btn-primary btn-small">
                <i class="bi bi-eye"></i>
              </a>
              <a href="register/edit-register-form/{{this.id}}" type="button" class="btn btn-warning btn-small">
                <i class="bi bi-pencil"></i>
              </a>
                <a href="register/delete-register/{{this.id}}" type="button" class="btn btn-danger btn-small">
                <i class="bi bi-person-x"></i>
              </a>
            </div>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>

</div>
