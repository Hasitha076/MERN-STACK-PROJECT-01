<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Module Dashboard</h1>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <a href="module/add-module-form" class="btn btn-sm btn-outline-secondary">+ New Module</a>
    </div>
        <form class="d-flex" role="search" action="" method="post">
        <input class="form-control me-2" name="text" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form> 
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">Module ID</th>
        <th scope="col">Module Name</th>
        <th scope="col">Duration</th>
        <th scope="col">Price</th>
      </tr>
    </thead>
    <tbody>
      {{#each rows}}
        <tr class="align-middle">
          <td>{{this.id}}</td>
          <td>{{this.module_name}}</td>
          <td>{{this.duration}}</td>
          <td>{{this.price}}</td>
          <td class="text-end">
            <div class="d-flex flex-row justify-content-end gap-2">
              <a href="module/view-module/{{this.id}}" type="button" class="btn btn-primary btn-small">
                <i class="bi bi-eye"></i>
              </a>
              <a href="module/edit-module-form/{{this.id}}" type="button" class="btn btn-warning btn-small">
                <i class="bi bi-pencil"></i>
              </a>
              <a href="module/delete-module/{{this.id}}" type="button" class="btn btn-danger btn-small">
                <i class="bi bi-person-x"></i>
              </a>
            </div>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>



<div class="row" style="display: flex; flex-direction:row; justify-content:center; margin-right: 0 !important">
     {{#each rows}}

   <div class="col-4 mb-3 text-center">
    <div class="card">
      <div class="card-body">
        <i class="bi bi-code-slash" style="font-size: 130px;"></i>
        <h5 class="card-title">Module: {{this.module_name}}</h5>
        <a href="register/module-register/{{this.module_name}}" class="btn btn-primary">Registered Students</a>
      </div>
    </div>
  </div>
{{/each}}
</div>
</div>

