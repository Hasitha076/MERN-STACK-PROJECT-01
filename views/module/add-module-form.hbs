<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Module</h1>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/module">Program Management</a></li>
          <li class="breadcrumb-item active">New Module</li>
        </ol>
      </nav>
    </div>
  </div>

</div>


<form action="module/add-module" method="POST">

  <div class="row form-group mb-4">
    <div class="col">
      <label for="id">Module ID</label>
      <input type="text" class="form-control" id="id" name="id" value="" placeholder="Module ID" required>
    </div>

    <div class="col">
      <label for="module_name">Module Name</label>
      <input type="text" class="form-control" id="module_name" name="module_name" value="" placeholder="Module Name" required>
    </div>
  </div>

  <div class="row form-group mb-4">

    <div class="col">
      <label for="duration">Duration</label>
      <input type="number" class="form-control" id="duration" name="duration" value="" placeholder="Duration" required>
    </div>

        <div class="col">
      <label for="price">Module Fee</label>
      <input type="text" class="form-control" id="price" name="price" value="" placeholder="Module Fee" required>
    </div>
  </div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Add Module</button>
  </div>

  

</form>