<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Registered Student's Info.</h1>
</div>

<div class="col py-3">

  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/register">Registration</a></li>
          <li class="breadcrumb-item active">ID: {{ register.id }} - Registration Info.</li>
        </ol>
      </nav>
    </div>
  </div>

</div>

<ul class="list-group">

    <li class="list-group-item">
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>ID:</b></div>
      <div class="col">{{ register.id }}</div>
    </div>
  </li>

  <li class="list-group-item"> 
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>Student Name:</b></div>
      <div class="col">{{ register.student_name }}</div>
    </div>
  </li>

  <li class="list-group-item"> 
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>Module Name:</b></div>
      <div class="col">{{ register.module_name }}</div>
    </div>
  </li>

  <li class="list-group-item"> 
    <div class="row">
      <div class="col" style="max-width: 140px"> <b>Register Date:</b></div>
      <div class="col">{{ formatDate register.register_date }}</div>
    </div>
  </li>

</ul>
