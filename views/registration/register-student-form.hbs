<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Student Registration</h1>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/register">Registration</a></li>
          <li class="breadcrumb-item active">New Register Student</li>
        </ol>
      </nav>
    </div>
  </div>

</div>


<form action="register/register-student" method="POST">

  <div class="row form-group mb-4">
    <div class="col">
      <label for="id">ID</label>
      <input type="text" class="form-control" id="id" name="id" value="" placeholder="ID" required>
    </div>

    <div class="col">
      <label for="student_name">Student Name</label>
        <select class="form-control" name="student_name" id="student_name" required>
          <option value="" disabled="disabled" selected="selected">Choose a Student</option>
              {{#each studentRows}}
                <option>{{this.name}}</option>
              {{/each}}
          
      </select>
    </div>
  </div>

  <div class="row form-group mb-4">

    <div class="col">
      <label for="module_name">Module Name</label>
        <select class="form-control" name="module_name" id="module_name" required>
          <option value="" disabled="disabled" selected="selected">Choose a Module</option>
              {{#each programRows}}
                <option>{{this.module_name}}</option>
              {{/each}}
          
      </select>
    </div>

    <div class="col">
      <label for="register_time">Register Time</label>
      <input type="date" class="form-control" id="register_time" name="register_time" value="" placeholder="Register Time" required>
    </div>

  </div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Register Student</button>
  </div>

  
</form>